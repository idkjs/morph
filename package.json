{
  "name": "@reason-native-web/morph",
  "version": "0.3.1",
  "esy": {
    "build": [
      "refmterr dune build --root=."
    ],
    "install": [
      "esy-installer #{self.target_dir / 'default' / 'morph_test.install'}",
      "esy-installer #{self.target_dir / 'default' / 'morph.install'}"
    ],
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "test": "esy x RunTests.exe",
    "fmt": "dune build @fmt --auto-promote --root .",
    "examples": "esy b dune build @docs-examples",
    "examples-path": "esy echo #{self.target_dir}/default/docs",
    "docs": "dune build @doc --only-packages=morph,morph_graphql_server",
    "docs-path": "esy echo #{self.target_dir}/default/_doc/_html"
  },
  "dependencies": {
    "@esy-ocaml/reason": "^3.6.0",
    "@opam/dune": "*",
    "@opam/fmt": "*",
    "@opam/graphql-lwt": "0.13.0",
    "@opam/graphql": "0.13.0",
    "@opam/hmap": "*",
    "@opam/logs": "*",
    "@opam/lwt": "^5.0.0",
    "@opam/uri": "*",
    "@reason-native-web/piaf": "^1.0.1002",
    "ocaml": "4.9.0"
  },
  "devDependencies": {
    "@opam/mdx": "*",
    "@opam/merlin": "*",
    "@opam/mtime": "*",
    "@opam/ocamlformat": ">=0.14.0",
    "@opam/odoc": "*",
    "@opam/routes": "*",
    "@opam/utop": "*",
    "@reason-native/rely": "*",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam",
    "refmterr": "*"
  }
}
